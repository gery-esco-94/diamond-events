<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="well infobox">
            <h2 style="margin-top: 10px; margin-bottom: 20px;"><%= t (".edit") %></h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :firstname, t(".firstname") %><br />
            <%= f.text_field :firstname, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :lastname, t(".lastname") %><br />
            <%= f.text_field :lastname, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :username, t(".username") %><br />
            <%= f.text_field :username, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email *" %><br>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :phone, t(".phone") %><br />
            <%= f.phone_field :phone, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, t(".address") %><br />
            <%= f.text_field :address, class: "form-control" %>
          </div>
          
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :zipcode, t(".zipcode") %><br />
            <%= f.number_field :zipcode, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :country, t(".country") %><br />
            <%= f.text_field :country, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :birthday, t(".birthday") %><br />
            <%= f.date_field :birthday, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :password, t(".pass") %> <br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <i style="font-size: 10px"><%= t(".pass_data") %></i>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, t(".rep_pass") %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="field">
                <%= f.label :current_password, t(".act_pass") %> <br />
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                <i style="font-size: 10px"><%= t(".act_pass_data") %></i>
              </div>
        </div>
      </div>
            <div class="form-group" style="margin-bottom: 30px">
                <%= f.submit t(".update"), class: "btn btn-primary pull-right", style: "margin-top: 2px" %>
              </div>
            <% end %>

            <h3><%= t(".delete") %></h3>
            <div class="form-group" style="margin-bottom: 30px; height: 30px">
            <p><%= t(".unhappy") %> <%= button_to t(".delete"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger pull-left", style: "margin-top: 2px; margin-bottom: 30px" %></p>
            </div>
            <%= link_to t(".back"), :back, class: "pull-right", style: "margin-top: -10px"  %>
        </div>
    </div>
</div>