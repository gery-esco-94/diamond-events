<!DOCTYPE html>
<html>
	<head>
		<title>App</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header>
			<nav>
				<div class="navbar navbar-warning">
		            <div class="navbar-header">
		                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
		                    <span class="icon-bar"></span>
		                    <span class="icon-bar"></span>
		                    <span class="icon-bar"></span>
		                </button>
		                <%= link_to t("nav.root"), root_url(locale: I18n.locale), class: "navbar-brand" %>
		            </div>
			        <div class="navbar-collapse collapse navbar-warning-collapse">
			            <ul class="nav navbar-nav">
			                <% if usuario_signed_in? %>
							<li>
								<% id = current_usuario.id %>
								<%= link_to t("nav.edit"), edit_usuario_registration_url(locale: I18n.locale), data: id %>
							</li>
							<li>
								<%= link_to t("nav.close"), destroy_usuario_session_path(locale: I18n.locale), method: :delete %>
							</li>
							<% else %>
							<li>
								<%= link_to t("nav.login"), new_usuario_session_path(locale: I18n.locale) %>
							</li>
							<li>
								<%= link_to t("nav.signup"), new_usuario_registration_path(locale: I18n.locale) %>
							</li>
							<% end %>
			            </ul>
			            <ul class="nav navbar-nav navbar-right">
			                <li>
								<%= link_to "EspaÃ±ol", locale: "es" %>
							</li>
							<li style="margin-right: 20px">
								<%= link_to "Ingles", locale: "en" %>
							</li>
			            </ul>
			        </div>
	        	</div>
        	</nav>
		</header>

		 <p class="notice" style="<%= "display:none;" if notice.nil? %>"><%= notice %></p>
		 <p class="alerta" style="<%= "display:none;" if alert.nil? %>"><%= alert %></p>
		<div class="container" style="margin-top: 30px">
			<%= yield %>
		</div>
	</body>
	<script type="text/javascript">
		$.material.init();

		function validateCheckbox()
		{
		    if( $('#checkbox').attr('checked')){
		      alert("you have to accept the terms first");
		    }
		}
	</script>
</html>
